# Snowflake Resource Monitor - Environment Configuration
# Copy this file to .env and fill in your Snowflake credentials

# Snowflake Account Identifier
# Format: <account_locator>.<region>.<cloud> or just <account_locator>
# Examples: abc12345.us-east-1, xy12345.us-east-1.aws
SNOWFLAKE_ACCOUNT=your_account_identifier

# Snowflake Username
SNOWFLAKE_USER=your_username

# Snowflake Password
SNOWFLAKE_PASSWORD=your_password

# Warehouse to use for monitoring queries (should be small, e.g., X-Small)
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# Database (should be SNOWFLAKE for account usage data)
SNOWFLAKE_DATABASE=SNOWFLAKE

# Schema (should be ACCOUNT_USAGE for account usage data)
SNOWFLAKE_SCHEMA=ACCOUNT_USAGE

# Role (needs access to SNOWFLAKE.ACCOUNT_USAGE views)
SNOWFLAKE_ROLE=ACCOUNTADMIN
